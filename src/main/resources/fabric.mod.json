{
  "schemaVersion": 1,
  "id": "more-fluids",
  "version": "${version}",

  "name": "More fluids",
  "description": "Minecraft mod that adds new fluids to the game, each having some effect applied to the player.",
  "authors": [
    "Gabriel Rech Brand"
  ],
  "contact": {
    "homepage": "https://github.com/GabrielRechBrand",
    "sources": "https://github.com/GabrielRechBrand/more-fluids"
  },

  "license": "CC0-1.0",
  "icon": "assets/more-fluids/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.fabricmc.example.MoreFluidsMod"
    ],
    "client": [
      "net.fabricmc.example.MoreFluidsModClient"
    ]
  },
  "mixins": [
    "more-fluids.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
